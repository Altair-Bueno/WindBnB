---
import {
  URI as NewBookingHandlerURI,
  FormDataKeys as NewBookingFormDataKeys,
} from "../bookings/newHandler";
const { idCasa } = Astro.params;
---

<!--TODO this code is used for booking a house. Put this on the house page :P -->
<form action={NewBookingHandlerURI} method="post">
  <input hidden value={idCasa} name={NewBookingFormDataKeys.houseId} />
  <input name={NewBookingFormDataKeys.endDate} type="date" />
  <input name={NewBookingFormDataKeys.startDate} type="date" />
  <input type="submit" value="Book!" />
</form>
